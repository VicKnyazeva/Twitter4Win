<Application x:Class="TwitterApp.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:TwitterApp"
             xmlns:cnv ="clr-namespace:TwitterApp.Helpers"
             LoadCompleted="Application_LoadCompleted">
    <Application.Resources>
        <cnv:AgoConverter x:Key="AgoConverter" />
        <Style TargetType="{x:Type Hyperlink}">
            <Setter Property="Foreground" Value="#0083FF" />
            <Setter Property="TextDecorations" Value="None" />
        </Style>
    </Application.Resources>
</Application>
